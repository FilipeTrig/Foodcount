@model Foodcount.Models.FoodsModel;

<form method="post" asp-controller="Foods" asp-action="Edit">
    <div class="container">
        <div class="row pt-3">
            <div class="col pt-3">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="displayName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="displayName" class="form-control" />
                        <span asp-validation-for="displayName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="oneUnitWeight">Weight per unit</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="oneUnitWeight" class="form-control" />
                        <span asp-validation-for="oneUnitWeight" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Kcal"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Kcal" class="form-control" />
                        <span asp-validation-for="Kcal" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Fat"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Fat" class="form-control" />
                        <span asp-validation-for="Fat" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Carbs"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Carbs" class="form-control" />
                        <span asp-validation-for="Carbs" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Sugars"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Sugars" class="form-control" />
                        <span asp-validation-for="Sugars" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Proteins"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Proteins" class="form-control" />
                        <span asp-validation-for="Proteins" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Tags"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Tags" class="form-control" />
                        <span asp-validation-for="Tags" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-100" value="Edit" />
                    </div>
                    <div class="col">
                        <a asp-controller="Foods" asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
